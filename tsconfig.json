{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "esnext", "esnext.asynciterable"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "compilerOptions": {
      "rootDir": "src",
      "outDir": "build"
    }
  }
}
